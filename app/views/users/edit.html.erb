<h2 class="main-title">店舗情報編集</h2>

<%= form_with model: @user, url: user_path(@user), method: :patch, class: "form", local: true do |f| %>

<%= render "devise/shared/error_messages", resource: @user %>
<table>

  <tr class="field">
    <th>
      <%= f.label :shop_name, class: "form-label" %><br />
    </th>
    <td>
      <%= f.text_field :shop_name, autofocus: true, class: "form-input", autocomplete: "name" %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :email, class: "form-label" %><br />
    </th>
    <td>
      <%= f.email_field :email, class: "form-input", autocomplete: "email" %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :category_id, class: "form-label" %><br />
    </th>
    <td>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "form-select"}) %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :prefecture_id, class: "form-label" %><br />
    </th>
    <td>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class: "form-select"}) %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :address, class: "form-label" %><br />
    </th>
    <td>
      <%= f.text_field :address, autocomplete: "address-level2", class: "form-input", placeholder: "市町村以下の住所を入力" %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :business_hours, class: "form-label" %><br />
    </th>
    <td>
      <%= f.text_field :business_hours, class: "form-input", placeholder: "例）午前10時〜午後６時" %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :holiday, class: "form-label" %><br />
    </th>
    <td>
      <%= f.text_field :holiday, class: "form-input", placeholder: "例）毎週水曜" %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :phone_number, class: "form-label" %><br />
    </th>
    <td>
      <%= f.text_field :phone_number, class: "form-input", placeholder: "ハイフン(-)を入れて入力" %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :image, class: "form-label" %><br />
    </th>
    <td>
      <%= f.file_field :image %>
    </td>
  </tr>

</table>

<div class="actions">
  <%= f.submit "更新する", class: "button" %>
</div>

<% end %>