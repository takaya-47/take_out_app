<h2 class="main-title top">パスワード再設定</h2>

<%= form_with model: @user, url: user_password_path, method: :patch, class: "form", local: true do |f| %>

<%= render "devise/shared/error_messages", resource: @user %>

<%= f.hidden_field :reset_password_token %>

<table>
  <tr class="field">
    <th>
      <%= f.label :password, "新しいパスワード" %><br />
    </th>
    <td>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字、半角英数混合)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :password_confirmation, "パスワード（確認）" %><br />
    </th>
    <td>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </td>
  </tr>
</table>

<div class="actions">
  <%= f.submit "変更する", class: "button registration" %>
</div>
<% end %>