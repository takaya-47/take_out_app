<h2 class="main-title">パスワードを忘れましたか？</h2>

<%= form_with model: @user, url: user_password_path, method: :post, class: "form", local: true do |f| %>

<%= render "devise/shared/error_messages", resource: @user %>

<table>
  <tr class="field">
    <th>
      <%= f.label :email, "メールアドレス", class: "form-label" %><br />
    </th>
    <td>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </td>
  </tr>
</table>

<div class="actions">
  <%= f.submit "リセットメール送信", class: "button" %>
</div>
<% end %>

<%= render "devise/shared/links" %>