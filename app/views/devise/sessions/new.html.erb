<h2 class="main-title top">ログイン</h2>

<%= form_with model: @user, url: new_user_session_path, class: "form", local: true do |f| %>

<table>
  <tr class="field">
    <th>
      <%= f.label :email, "メールアドレス", class: "form-label" %><br />
    </th>
    <td>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </td>
  </tr>

  <tr class="field">
    <th>
      <%= f.label :password, "パスワード", class: "form-label" %><br />
    </th>
    <td>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </td>
  </tr>
</table>

<% if devise_mapping.rememberable? %>
<div class="field remember">
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me, "ユーザー情報を記憶する" %>
</div>
<% end %>

<div class="actions">
  <%= f.submit "ログインする", class: "button registration" %>
</div>
<% end %>

<div class="authLink">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name), class: "authLink_item" %>
  <% end %>
</div>